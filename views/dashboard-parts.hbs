<!DOCTYPE HTML>
<html>
<head>
    <title>Parts List - Dashboard</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- JQUERY -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600i" rel="stylesheet">

    <!-- STYLESHEETS -->
    <link rel='stylesheet' type='text/css' href='/css/style.css' />
    <link rel='stylesheet' type='text/css' href='/css/dashboard-parts.css' />
</head>
<body>
    <!-- NAVBAR -->
    {{> navbar }}

    <!-- FILTER LIST -->
    {{> filter}}

    <div class='row parts-list text-center'>
      <h3 class='col-sm-3'>Part Name</h3>
      <h3 class='col-sm-3'>Stock</h3>
      <h3 class='col-sm-3'>Type</h3>
      <h3 class='col-sm-3'>Description</h3>
    </div>

    <ul class='parts-list filter-list text-center'>
        {{#each parts}}
            <li class='row'>
                <p class='filter-key col-sm-3'>{{ this.partName }}</p>
                <p class='col-sm-3'>{{ this.stock }}</p>
                <p class='col-sm-3'>{{ this.type }}</p>
                <p class='col-sm-3'>{{ this.description }}</p>
            </li>
        {{/each}}
    </ul>
</body>
</html>
