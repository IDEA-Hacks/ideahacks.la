<!DOCTYPE HTML>
<html>
<head>
    <title>Parts - Admin</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- jQuery -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>

    <!-- SOCKETIO -->
    <script src='/socket.io/socket.io.js'></script>

    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600i,700" rel="stylesheet">

    <!-- STYLESHEETS -->
    <link rel='stylesheet' type='text/css' href='/css/style.css' />
    <link rel='stylesheet' type='text/css' href='/css/parts-list.css' />
    <link rel='stylesheet' type='text/css' href='/css/modals/parts-creation-modal.css' />

    <!-- SCRIPTS -->
    <script src="/js/admin-parts.js"></script>
    <script src='/js/parts-checkout.js'></script>
    <script src='/js/part-creation.js'></script>
</head>
<body>
    <!-- NAVBAR -->
    {{> navbar }}

    <!-- BANNER -->
    <div class='banner'>
        <h1 class='transparent-ucla-blue'>Parts</h1>
    </div>

    {{> partsCreationModal }}

    <div class='content-wrapper text-right'>
        <button title='Add Part'>+</button>
    </div>

    <!-- FILTER LIST -->
    {{> filter}}

    <!-- PARTS LIST -->
    <ul class='parts-list filter-list'>
        {{#each parts}}
        <li class='row part' id='{{this._id}}'>
            <p class='filter-key col-sm-4 col-xs-6 part-name'>{{ this.partName }}</p>
            <p class='filter-key col-sm-4 col-xs-6 text-center part-stock'>{{ this.stock }} in Stock</p>
            <p class='filter-key col-sm-4 text-right part-type'>{{ this.type }}</p>
        </li>
        {{/each}}
    </ul>

    <!-- PARTS CHECKOUT MODAL -->
    {{> partsCheckoutModal }}
</body>
</html>
